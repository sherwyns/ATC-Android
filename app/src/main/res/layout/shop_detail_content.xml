<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/dimen_5dp"
        app:cardElevation="@dimen/dimen_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_shop_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_18dp"
                android:layout_marginEnd="@dimen/dimen_15dp"
                android:layout_marginBottom="@dimen/dimen_18dp">

                <ImageView
                    android:id="@+id/img_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_restaurant_menu_black_24dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_toEndOf="@id/img_category"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.02"
                        android:text="Shop Name"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/font_16"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.02"
                        android:text="Shop Name"
                        android:textColor="@color/colorOrange"
                        android:textSize="8sp"
                        android:textStyle="normal|italic"
                        tools:text="Place , street, city, pincode " />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_fav"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:background="@drawable/white_round"
                    android:elevation="@dimen/dimen_5dp"
                    android:padding="@dimen/dimen_5dp"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:tint="@android:color/holo_red_light" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_marginEnd="@dimen/dimen_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.02"
            android:text="@string/about"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_12"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_opening_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:drawableEnd="@drawable/ic_error_outline_black_24dp"
            android:drawablePadding="@dimen/dimen_10dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:letterSpacing="0.02"
            android:text="@string/open_until"
            android:textColor="#a6a7a7"
            android:textSize="@dimen/font_12"
            android:textStyle="italic" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10dp"
        android:fontFamily="sans-serif"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="2.7sp"
        android:textColor="#696969"
        android:textSize="@dimen/font_12"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/dimen_10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5dp"
            android:background="@drawable/blue_round_gradient"
            android:elevation="@dimen/dimen_5dp"
            android:padding="@dimen/dimen_10dp"
            android:src="@drawable/ic_phone_in_talk_black_24dp" />

        <ImageView
            android:id="@+id/iv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:background="@drawable/blue_round_gradient"
            android:elevation="@dimen/dimen_5dp"
            android:padding="@dimen/dimen_10dp"
            android:src="@drawable/ic_mail_outline_black_24dp" />

        <ImageView
            android:id="@+id/iv_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_5dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:background="@drawable/blue_round_gradient"
            android:elevation="@dimen/dimen_5dp"
            android:padding="@dimen/dimen_10dp"
            android:src="@drawable/ic_language_black_24dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_marginEnd="@dimen/dimen_10dp">

        <fragment
            android:id="@+id/map_fragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_140dp"
            tools:context=".MapsActivity" />

        <TextView
            android:id="@+id/tv_view_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_120dp"
            android:layout_marginEnd="@dimen/dimen_50dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:background="@drawable/button_bg_orange"
            android:elevation="5dp"
            android:gravity="center"
            android:paddingStart="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_15dp"
            android:paddingEnd="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_15dp"
            android:text="@string/view_products"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_18" />
    </RelativeLayout>

</LinearLayout>