<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppThemeBlue" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">

        <item name="android:background">@drawable/button_bg_orange</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="ButtonStyleTransparent">

        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

</resources>
